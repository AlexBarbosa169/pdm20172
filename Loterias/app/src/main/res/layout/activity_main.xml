<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alexs.loterias.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/trevo"
        android:layout_weight="2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <ImageView
            android:tag="mega"
            android:id="@+id/imgMegasena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/megasena"
            android:layout_weight="1"/>
        <ImageView
            android:tag="lotofacil"
            android:id="@+id/imgLotofacil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logolotofacil"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <ImageView
            android:tag="quina"
            android:id="@+id/imgQuina"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/quinalogo"
            android:layout_weight="1"/>
        <ImageView
            android:tag="lotomania"
            android:id="@+id/imgLotomania"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logolotomania"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textTeste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃ£o clicou!"/>

</LinearLayout>
